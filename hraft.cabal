  default-language: Haskell2010
  build-depends:
    , base
    , fused-effects
    , tasty-bench
    , transformers
    , hraft
    , io-sim
    , io-classes
    , time
    , fused-effects-random
    , cborg
    , bytestring
    , serialise
    , time
    , random
    , containers
